{
  "name": "cloudvoyager",
  "version": "1.0.0",
  "description": "A CLI tool to migrate all projects from SonarQube Server to SonarCloud.io",
  "main": "src/index.js",
  "bin": {
    "cloudvoyager": "./src/index.js"
  },
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "transfer": "node src/index.js transfer -c config.json --verbose",
    "validate": "node src/index.js validate -c config.json",
    "test:connection": "node src/index.js test -c config.json",
    "status": "node src/index.js status -c config.json",
    "reset": "node src/index.js reset -c config.json",
    "transfer-all": "node src/index.js transfer-all -c config.json --verbose",
    "transfer-all:dry-run": "node src/index.js transfer-all -c config.json --verbose --dry-run",
    "migrate": "node src/index.js migrate -c migrate-config.json --verbose",
    "migrate:dry-run": "node src/index.js migrate -c migrate-config.json --verbose --dry-run",
    "migrate:skip-hotspot-metadata": "node src/index.js migrate -c migrate-config.json --verbose --skip-hotspot-metadata-sync",
    "migrate:skip-issue-metadata": "node src/index.js migrate -c migrate-config.json --verbose --skip-issue-metadata-sync",
    "migrate:skip-all-metadata": "node src/index.js migrate -c migrate-config.json --verbose --skip-issue-metadata-sync --skip-hotspot-metadata-sync",
    "sync-metadata": "node src/index.js sync-metadata -c migrate-config.json --verbose",
    "sync-metadata:issues-only": "node src/index.js sync-metadata -c migrate-config.json --verbose --skip-hotspot-metadata-sync",
    "sync-metadata:hotspots-only": "node src/index.js sync-metadata -c migrate-config.json --verbose --skip-issue-metadata-sync",
    "migrate:high-memory": "NODE_OPTIONS='--max-old-space-size=8192' node src/index.js migrate -c migrate-config.json --verbose",
    "migrate:fast": "NODE_OPTIONS='--max-old-space-size=8192' node src/index.js migrate -c migrate-config.json --verbose --concurrency 50 --project-concurrency 8 --workers 16",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "build": "node scripts/build.js",
    "package": "node scripts/build.js --package",
    "package:linux-x64": "node scripts/build.js --package --target=linux-x64",
    "package:linux-arm64": "node scripts/build.js --package --target=linux-arm64",
    "package:macos-x64": "node scripts/build.js --package --target=macos-x64",
    "package:macos-arm64": "node scripts/build.js --package --target=macos-arm64",
    "package:win-x64": "node scripts/build.js --package --target=win-x64"
  },
  "pkg": {
    "assets": [
      "dist/schema/**",
      "dist/encoder-worker.js"
    ],
    "outputPath": "dist/bin"
  },
  "keywords": [
    "sonarqube",
    "sonarcloud",
    "migration",
    "cli",
    "scanner"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "axios": "^1.6.0",
    "commander": "^12.0.0",
    "form-data": "^4.0.0",
    "protobufjs": "^7.2.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "esbuild": "^0.27.3",
    "eslint": "^8.56.0",
    "pkg": "^5.8.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
